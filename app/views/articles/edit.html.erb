<div class="navbar">
<%= link_to "Wikinimous", articles_path %>
<%= link_to "New Article", new_article_path %>
</div>

<div class="container">
<h1>Editing article</h1>

<%= form_with model: @article do |f| %>
<div class="form">
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_area(:content, size: '50x10') %>
  <div class="form-btn"><%= f.submit %></div>
</div>
<% end %>
<br>
<div class="edit_links">
<%= link_to "Show", article_path %> |
<%= link_to "Back", articles_path %>
</div>
</div>
